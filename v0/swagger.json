                    "companies": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string",
                            "description": "Company ID"
                          },
                          "logo": {
                            "type": "string",
                            "description": "URL or identifier of the logo"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
