                      "type": "string",
                      "description": "Job title"
                    },
                    "city": {
                      "type": "string",
                      "description": "City"
                    },
                    "job_link": {
                      "type": "string",
                      "description": "Job link"
                    },
                    "company": {
                      "type": "string",
                      "description": "Company name"
                    }
                  },
                  "required": ["job_title", "city", "job_link", "company"]
